        <TextBlock  Margin="816,377,808,505" TextWrapping="Wrap" Text="Can you navigate a new idea to market?"  Height="198" Width="1206" FontFamily="/WpfApplication2;component/Fonts/#Gotham Book" FontSize="58.69" TextAlignment="Center" Foreground="White"/>
        <TextBlock  Margin="1119,636,1107,246" TextWrapping="Wrap" Text="Push Controls Forward to Begin"  Height="198" FontFamily="/WpfApplication2;component/Fonts/#Gotham Book" FontSize="38.12" TextAlignment="Center" Foreground="White"/>

