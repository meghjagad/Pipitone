                </Button>

            </Grid>
        </k:KinectRegion>
        <Image Margin="1339,452,1339,469"  Width="152" Source="Start_Screen_Assets/Nav Icon.png"/>
        <TextBlock HorizontalAlignment="Left" Margin="739,183.8,0,0" TextWrapping="Wrap" Text="PILOT YOUR STARTUP" VerticalAlignment="Top" Height="198" Width="1368" FontFamily="/WpfApplication2;component/Fonts/#Gotham Bold" FontWeight="Bold" FontSize="119.9" TextAlignment="Center" Foreground="White"/>
